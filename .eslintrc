{
    "extends": ["airbnb-base/legacy", "prettier", "plugin:sonarjs/recommended", "plugin:promise/recommended"],
    "rules": {
        "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
        "no-underscore-dangle": 0,
        "no-plusplus": 0,
        "no-new": 0,
        "no-param-reassign": 0,
        "promise/always-return": 0,
        "sonarjs/prefer-object-literal": 0
    },
    "plugins": ["prettier", "sonarjs", "promise"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true
    }
}
